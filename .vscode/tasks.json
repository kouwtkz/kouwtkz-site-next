{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: setup",
      "type": "shell",
      "command": "npm install"
    },
    {
      "label": "npm: dev",
      "type": "shell",
      "command": "PORT=3001 npm run dev"
    },
    {
      "label": "npm: preview",
      "type": "shell",
      "command": "npm run preview"
    },
    {
      "label": "npm: build",
      "type": "shell",
      "command": "npm run build",
      "problemMatcher": []
    },
    {
      "label": "npm: static build",
      "type": "shell",
      "command": "OUTPUT_MODE=export npm run build"
    },
    {
      "label": "npm: start",
      "type": "shell",
      "command": "npm run start"
    },
    {
      "label": "npm: lint",
      "type": "shell",
      "command": "npm run lint"
    },
    {
      "label": "prisma: studio",
      "type": "shell",
      "command": "npx prisma studio"
    },
    {
      "label": "prisma: pull",
      "type": "shell",
      "command": "npx prisma db pull"
    },
    {
      "label": "prisma: push",
      "type": "shell",
      "command": "npx prisma db push"
    },
    {
      "label": "prisma: migrate dev",
      "type": "shell",
      "command": "npx prisma migrate dev"
    },
    {
      "label": "rm: cache webpack",
      "type": "shell",
      "command": "rm -r .next/cache/webpack"
    },
    {
      "label": "test: test.mjs",
      "type": "shell",
      "command": "node test/test.mjs"
    },
    {
      "label": "deploy: rs static media",
      "type": "shell",
      "command": "rsync -au -e ssh --delete ./_media/ rs:~/mysite_next_static/media/"
    },
    {
      "label": "deploy: rs static",
      "type": "shell",
      "command": "rsync -au -e ssh --delete ./out/html/ rs:~/mysite_next_static/html/"
    },
    {
      "label": "deploy: rs static lite",
      "type": "shell",
      "command": "rsync -au -e ssh --size-only --delete ./out/html/ rs:~/mysite_next_static/html/"
    },
  ]
}
